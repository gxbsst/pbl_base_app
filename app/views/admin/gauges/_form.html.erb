</div>
<div class="form-group">
  <%= f.label :level_2,  '★★☆☆☆', class: %w(control-label) %>
  <%= f.text_area :level_2, placeholder: '请输入二星标准', class: %w(form-control) %>
</div>
<div class="form-group">
  <%= f.label :level_3,  '★★★☆☆', class: %w(control-label) %>
  <%= f.text_area :level_3, placeholder: '请输入三星标准', class: %w(form-control) %>
</div>
<div class="form-group">
  <%= f.label :level_4,  '★★★★☆', class: %w(control-label) %>
  <%= f.text_area :level_4, placeholder: '请输入四星标准', class: %w(form-control) %>
</div>
<div class="form-group">
  <%= f.label :level_5,  '★★★★★', class: %w(control-label) %>
  <%= f.text_area :level_5, placeholder: '请输入五星标准', class: %w(form-control) %>
</div>
<div class="center">
  <%= f.submit value: '确定', class: %w(btn btn-blue) %>
</div>