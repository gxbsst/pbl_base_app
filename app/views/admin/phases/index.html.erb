<h3>
  学段列表
  <%= link_to '新建学段', new_admin_phase_path %>
  <span class="space-x">/</span>
  <%= link_to '学科管理', admin_subjects_path %>
  <%= link_to '分类管理', admin_standards_path %>
  <%= link_to '课标管理', admin_standard_items_path %>
</h3>
<div class="hr"></div>
<table class="table">
  <thead>
  <tr>
    <th>所属学科</th>
    <th>学段名称</th>
    <th width="150">操作</th>
  </tr>
  </thead>
  <tbody>
  <% @phases[:data].each do |phase| %>
      <tr>
        <td><%= phase[:subject][:name] %></td>
        <td><%= phase[:name] %></td>
        <td class="center">
          <%= link_to '编辑', edit_admin_phase_path(phase.id) %>
          <span class="space-x">/</span>
          <%= link_to '删除', admin_phase_path(phase.id), data: {confirm: '您确定要删除吗？', method: :delete} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="hr"></div>
<%= pagination(@phases[:meta], admin_phases_path) %>